FROM python:3.14-slim

WORKDIR /app

# Install uv
RUN pip install --no-cache-dir uv

# Copy shared auth library (relay depends on it via path = "../shared")
COPY shared /shared

# Copy relay package
COPY relay/pyproject.toml relay/uv.lock* ./
COPY relay/src ./src

# Install dependencies
RUN uv sync --frozen --no-dev

# Run as non-root
USER 65534

# Expose port
EXPOSE 8080

# Run relay directly using the venv python
CMD [".venv/bin/python", "-m", "relay", "--host", "0.0.0.0", "--port", "8080"]
